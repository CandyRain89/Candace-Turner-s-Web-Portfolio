const phrases = ["Software Developer", "Web Designer", "Problem Solver"];
let currentPhraseIndex = 0;
let currentCharacterIndex = 0;
let isDeleting = false;

function typeWriter() {
  const typingElement = document.getElementById("typing-element");
  const currentPhrase = phrases[currentPhraseIndex];

  if (isDeleting) {
    typingElement.textContent = currentPhrase.substring(0, currentCharacterIndex - 1);
    currentCharacterIndex--;
  } else {
    typingElement.textContent = currentPhrase.substring(0, currentCharacterIndex + 1);
    currentCharacterIndex++;
  }

  if (!isDeleting && currentCharacterIndex === currentPhrase.length) {
    isDeleting = true;
    setTimeout(typeWriter, 1500);
  } else if (isDeleting && currentCharacterIndex === 0) {
    isDeleting = false;
    currentPhraseIndex++;
    if (currentPhraseIndex === phrases.length) {
      currentPhraseIndex = 0;
    }
    setTimeout(typeWriter, 500);
  } else {
    setTimeout(typeWriter, 100);
  }
}

typeWriter();
